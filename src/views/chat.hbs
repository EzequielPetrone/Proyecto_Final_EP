<div class="container p-3">
  <div
    id="serverAlert"
    class="alert alert-danger sticky-top"
    role="alert"
    style="display: none;"
  >
    El servidor de chat no est√° conectado!
  </div>
  <h2 class="my-3">
    Chat:
  </h2>
  <form id="chatForm" class="p-2">
    <div class="d-flex align-items-center gap-3 mb-3">
      <label for="email">
        Email
      </label>
      <input
        disabled
        value="{{email}}"
        type="text"
        class="form-control"
        id="chatEmail"
        name="email"
      />
    </div>
    <div class="d-flex align-items-center gap-3 mb-3">
      <label for="name">
        Nombre
      </label>
      <input
        disabled
        value="{{nombre}}"
        type="text"
        class="form-control"
        id="chatNombre"
        name="name"
      />
    </div>
    <div
      class="mb-3 p-3 overflow-auto border rounded bg-light"
      style="height: 20rem;"
    >
      <ul id="chatList" class="list-unstyled"></ul>
    </div>
    <div class="mb-3 d-flex gap-3">
      <div class="w-100">
        <label for="chatMsj" class="form-label">
          Mensaje
        </label>
        <input
          required
          type="text"
          class="form-control"
          id="chatMsj"
          name="chatMsj"
        />
      </div>
      <button type="submit" class="btn btn-primary">
        Enviar
      </button>
    </div>
  </form>
  <form action="/" class="py-2">
    <button class="btn btn-primary my-2">
      VOLVER
    </button>
  </form>
</div>
<script src="js/chat.js"></script>