{{#if productos}}
  <table id="tablaProd" class="table table-striped table-hover">
    <thead>
      <tr>
        <th scope="col">
          Title
        </th>
        <th scope="col">
          Price
        </th>
        <th scope="col">
          Qty
        </th>
        <th scope="col">
          Image
        </th>
        <th scope="col">
          Delete
        </th>
      </tr>
    </thead>
    <tbody>
      {{#each productos}}
        <tr class="align-middle">
          <td>
            {{this.nombre}}
          </td>
          <td>
            $
            {{this.precio}}
          </td>
          <td>
            {{this.stock}}
          </td>
          <td>
            <img
              style="height: 4rem"
              class="mh-100"
              src="{{this.thumbnail}}"
              alt="{{this.title}}"
            />
          </td>
          <td>
            <i
              class="btnDeleteFromCart btn p-2 fa fa-trash fa-xl"
              prodId="{{this.id}}"
              aria-hidden="true"
            ></i>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <h3 id="noProd">
    No hay productos agregados a√∫n...
  </h3>
{{/if}}